{% extends 'EnsSylvainDavenelBundle::layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/enssylvaindavenel/css/jobs.css') }}" type="text/css" media="all" />
{% endblock %}

{% block body %}
    <h1>Category list</h1>
    <div class="more_jobs">
        <table>
            <thead>
            </thead>
            <tbody>
            {% for category in categories %}
                <tr>
                    <td>
                        <h1>
                            <a href="{{ path('ens_category_show', { 'slug': category.slug }) }}">
                                {{ category.name }}
                            </a>
                        </h1>
                    </td>
                    <td>
                        <a href="{{ path('ens_category_edit', { 'id': category.id }) }}">edit</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <ul>
        <li>
            <a href="{{ path('ens_category_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
